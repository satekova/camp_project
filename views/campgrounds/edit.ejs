<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Editing <%= campground.title %>
        </h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Name</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" value="<%=campground.title%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" value="<%=campground.location%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input value="<%=campground.price%>" type="text" class="form-control" name="campground[price]"
                            id="price" placeholder="12.99" aria-describedby="price-label">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" value="<%= campground.image %>" class="form-control" type="text" name="campground[image]"
                        id="image">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"><%= campground.description %></textarea>
                </div>
                <div class="md-3">
                    <button class="btn btn-dark">Save Changes</button>
                </div>
            </form>
            <div class="mb-3">
                <a href="/campgrounds">Back to All Campgrounds</a>
            </div>
        </div>
    </div>